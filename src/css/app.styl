body
  font-family $alt-text-font
  font-size $alt-text-size
  // letter-spacing .035rem
  color $alt-text-color


h1
  font-family RedHatDisplay-bld
  font-size 60px
  line-height 80px
  color $accent
  // letter-spacing .035rem

h2
  font-family RedHatDisplay-bld
  font-size 40px
  line-height 1.3em
  // letter-spacing .035rem
  color $accent

h3
  font-family RedHatDisplay-med
  font-size 20px
  line-height 30px
  letter-spacing .035rem
  color $alt-title-color

p
  font-family RedHatText-reg
  font-size $alt-text-size

a
  color $primary
  font-decoration none

.drs-menu
  color $primary
  font-size 16px
  padding 26px
  text-decoration none
  letter-spacing .035rem


.drs-menu-v
  color $primary
  font-size 16px
  text-decoration none
  letter-spacing .035rem
  padding-bottom 6px
  padding-top 6px

// Helpers


.no-alt-scroll
  *
    overflow hidden

.col-xs-12
  padding 0 30px 0 30px


.pad.col-md-12
  padding 0 30px 0 100px
