@font-face
  font-family RedHatDisplay-bld
  src url(./fonts/RedHatDisplay-Bold.woff)

@font-face
  font-family RedHatDisplay-med
  src url(./fonts/RedHatDisplay-Medium.woff)

@font-face
  font-family RedHatDisplay-reg
  src url(./fonts/RedHatText-Regular.woff)

.page-fixed-width
  max-width $pageFixWidth
  margin-left auto
  margin-right auto

